{
  "extends": "./tsconfig.build.json",
  "compilerOptions": {
    "jsx": "react-jsx"
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.js",
    "test/**/*.ts",
    "test/**/*.js",
    "scripts/**/*.ts",
    "scripts/**/*.js",
    "messages/**/*.json",
    "../../node_modules/jest-expect-message/types/index.d.ts"
  ],
  "exclude": ["node_modules", "dist"],
  "references": [
    {
      "path": "../isomorphic-lib"
    },
    {
      "path": "../backend-lib"
    },
    {
      "path": "../emailo"
    }
  ]
} 
