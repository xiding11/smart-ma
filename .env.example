# Dittofeed 开发环境变量
# 复制此文件为 .env 并根据需要修改配置

# 数据库配置
DATABASE_URL=postgresql://postgres:password@localhost:5432/dittofeed?connect_timeout=60
DATABASE_USER=postgres
DATABASE_PASSWORD=password

# ClickHouse 配置
CLICKHOUSE_HOST=http://localhost:8123
CLICKHOUSE_USER=dittofeed
CLICKHOUSE_PASSWORD=password

# Temporal 配置
TEMPORAL_ADDRESS=temporal:7233

# 应用配置
NODE_ENV=development
API_HOST=0.0.0.0
LOG_CONFIG=true

# 可选服务
# 启用 Temporal UI
# TEMPORAL_UI_VERSION=2.22.1

# 启用 Kafka (用于高级功能)
# KAFKA_BROKERS=kafka:29092

# 启用 SMTP 邮件服务器 (用于测试邮件)
# SMTP_HOST=mail-server
# SMTP_PORT=1025

# 启用对象存储 (用于文件上传)
# BLOB_STORAGE_ENDPOINT=http://localhost:9010
# BLOB_STORAGE_ACCESS_KEY=admin
# BLOB_STORAGE_SECRET_KEY=password
